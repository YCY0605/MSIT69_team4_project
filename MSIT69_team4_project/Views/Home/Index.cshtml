@{
	ViewData["Title"] = "Home Page";
}

<div class="row mainvwrow">
	<!-- 手機只顯示這個div -->
	<div class="col indexdiv">
		<!-- 打卡按鈕 -->
		<div style="height: 20%; width: 100%; border-radius: 10px;background-color: #dddddd;
			display: grid; grid-template-columns: 1fr 1fr 1fr; place-items: center; container-type: size;">
			<button class="indexleftbutton" style="background-color:#77ff77">簽到</button><button class="indexleftbutton" style="background-color:#77ff77">簽到</button><button class="indexleftbutton" style="background-color:#77ff77">簽到</button>
			@* <div class="row" style="height: 100%; width: 80%;">
				<div class="col-4"><button class="indexleftbutton" style="background-color:#77ff77">簽到</button></div>
				<div class="col-4"><button class="indexleftbutton" style="background-color:#f5a199">簽退</button></div>
				<div class="col-4"><button class="indexleftbutton" style="background-color:#ff9966">外出</button></div>
			</div> *@
		</div>
		<!-- 時間 -->
		<div style="height:25%; container-type: inline-size;
                display: grid; place-items: center; font-size: 5cqw">
			<span id="day" style="font-size: 7cqw"></span>
			<span id="clock" style="font-size: 9cqw"></span>
		</div>
		<!-- 今日待辦 -->
		<div class="block" style="height:55%;">
			<ul style="font-size:8cqw; display: grid; place-items: center;">今日待辦事項：</ul>
		</div>
	</div>

	<!-- 中 行事曆 -->
	<div class="col d-none d-md-block indexdiv">
		<div class="block" style="height: 100%; padding: 0 5%">
			<div style="width:100%;position: relative; text-align: center;">
				<span style="font-size: 8cqw;">行事曆：</span>
			</div>
			<div class="calendar">
				<div class="calendarfield">日期</div><div class="calendarfield">星期</div class="calendarfield"><div class="calendarfield">早班</div><div class="calendarfield">晚班</div><div class="calendarfield">大夜班</div>
			</div>
		</div>
	</div>

	<!-- 右 -->
	<div class="col d-none d-md-block indexdiv">
		<!-- 公佈欄 -->
		<div class="block" style="height: 43%;">
			<div style="width:100%; position: relative; text-align: center;">
				<span style="font-size: 8cqw;">公佈欄</span>
				<a href="#" style="position: absolute; right: 10px; bottom: 3px">more</a>
			</div>
			<ul style="font-size:6cqw; ">
				<li><a href="#">1</a></li>
				<li><a href="#">2</a></li>
				<li><a href="#">3</a></li>
				<li><a href="#">4</a></li>
				<li><a href="#">5</a></li>
			</ul>
		</div>
		<!-- 留空 -->
		<div style="height: 5%; width: 100%">
		</div>
		<!-- 快速按鈕 -->
		<div style="height: 52%; width: 100%; border-radius: 10px; background-color: #dddddd; display:grid;
			grid-template-columns: 1fr 1fr; grid-template-rows: 1fr 1fr; padding: 10px">
			<button class="indexrightbutton">個人任務</button>
			<button class="indexrightbutton">案件管理</button>
			<button class="indexrightbutton">請假事宜</button>
			<button class="indexrightbutton">出勤管理</button>
		</div>
	</div>
</div>